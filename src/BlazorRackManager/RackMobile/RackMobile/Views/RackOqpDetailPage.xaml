<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RackMobile.Views.RackOqpDetailPage"
             Title="{Binding Title}">
    <ContentPage.Content>
		<StackLayout Orientation="Vertical" Margin="10">

			<Label Text="Gisement :" 
					FontAttributes="Bold"
					FontSize="Large"
					TextDecorations="Underline"/>
			<Label FontSize="Medium">
				<Label.Text>
					<MultiBinding StringFormat="{}{0} - {1}">
						<Binding Path="RackInfo.Gisement" />
						<Binding Path="RackInfo.PosRack" />
					</MultiBinding>
				</Label.Text>
			</Label>

			<Label Text="Client :" 
					FontAttributes="Bold"
					FontSize="Large"
					TextDecorations="Underline"/>
			<Label Text="{Binding RackInfo.NomClient}"
					FontSize="Medium"/>

			<Label Text="Commande :" 
					FontAttributes="Bold"
					FontSize="Large"
					TextDecorations="Underline"/>
			<Label Text="{Binding RackInfo.IdCommande}"
					FontSize="Medium"/>

			<Label Text="Info :" 
				FontAttributes="Bold"
				FontSize="Large"
				TextDecorations="Underline"/>
			<Label Text="{Binding RackInfo.DescriptionCmd}"/>

			<Label Text="Date d'entrée :" 
					FontAttributes="Bold"
					FontSize="Large"
					TextDecorations="Underline"/>
			<Label Text="{Binding RackInfo.DateEntree, StringFormat='{dd/MM/yyyy}'}"
					FontSize="Medium"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>